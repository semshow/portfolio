script(type="text/x-template")#slider-container
  .work__content
    display(
      :works="works"
      :currentWork="currentWork"
      :currentIndex="currentIndex"
      @slide = "handleSlide"
    )
    info(
      :currentWork="currentWork"
    )
script(type="text/x-template")#slider-display
  .work__slider(:data-slide="currentIndex + 1")
    img(:src="currentWork.photo").work__slider-imgpic
    thumbs(
      :works="works",
      :currentWork="currentWork"
    )
    btns(
      @slide="direction=> $emit('slide',direction)"
    )    

script(type="text/x-template")#slider-btns
  .work__slider-buttons    
    .work__slider-next
      button(@click.prevent="$emit('slide','next')").preview__slider-btn.preview__slider-btn--next
    .work__slider-prev
      button(@click.prevent="$emit('slide','prev')").preview__slider-btn.preview__slider-btn--prev  
script(type="text/x-template")#slider-thumbs   
  ul.work__slider-block
    li.work__slider-block-item(
      v-for="work in works"
:class="{'work__slider__item--active': work.id === currentWork.id}"
    )
      button.work__slider-preview-btn
        .work__slider-sliderhover
        img(:src="work.photo" alt="").work__slider-pic
script(type="text/x-template")#slider-info   
  .work__slider-description
    tags(
      :tags="tagsArray"
    )
    h3.work__slider-title {{currentWork.title}}
    .work__slider-text 
      p {{currentWork.desc}}
    a(:href="currentWork.link").work__slider-link Посмотреть сайт  
script(type="text/x-template")#slider-tags   
  ul.work__slider-skills
    li.work__slider-skills-item(v-for="tag in tags") {{tag}}
