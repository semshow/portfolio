.work {
  min-height: 790px;
  padding-top: 152px;

  @include tablets {
    padding-top: 120px;
  }

  @include phones {
    padding-top: 100px;
  }
}

.work__title {
  color: $work-text-gray;
  font-size: 36px;
  font-weight: bold;
  margin-bottom: 59px;

  @include phones {
    width: 85%;
    margin: 0 auto;
    margin-bottom: 35px;
  }
}

.work__content {
  display: flex;
  justify-content: space-between;
  position: relative;

  @include tablets {
    flex-direction: column;
  }
}

.work__slider {
  width: 55%;
  height: 354px;
  position: relative;
  &::after {
    content: attr(data-slide);
    position: absolute;
    font-size: 300px;
    line-height: 300px;
    font-weight: 800;
    color: #f0f0f0;
    bottom: 100px;
    right: -20%;
    z-index: -1;

    @include phones {
      display: none;
    }
  }

  @include tablets {
    width: 90%;
    margin-bottom: 60px;
  }

  @include phones {
    width: 100%;
    height: auto;
  }
}

.work__slider-imgpic {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.work__slider-block {
  display: flex;
  justify-content: flex-end;
  width: 100%;
  height: 100px;
  position: absolute;
  bottom: 31px;

  @include phones {
    display: none;
  }
}

.work__slider-buttons {
  width: 50px;
  height: 100px;
  position: absolute;
  right: -50px;
  bottom: 30px;

  @include phones {
    right: 0;
    bottom: 0;
  }
}

.preview__slider-btn {
  background-color: #2d3c4e;
  display: flex;
  width: 50px;
  height: 50px;
  cursor: pointer;
  justify-content: center;
  align-items: center;
  &::before {
    content: svg-load("arrow-down.svg", fill= "$white", width=8px, height=10px);
    text-align: center;
    line-height: 50px;
  }
  &:hover {
    background-color: #f29400;
  }
}
.preview__slider-btn--prev {
  &::before {
    content: svg-load(
      "arrow-down.svg",
      fill= "$white",
      width=8px,
      height=10px,
      fill-opacity=0.3
    );
    transform: rotate(-180deg);
  }
}

.work__slider-block-item {
  position: relative;
  width: 178px;
  height: 100px;
}

.work__slider-preview-btn {
  display: block;
  padding: 0;
  height: 100%;
  width: 100%;
}

.work__slider-block-item:hover .work__slider-sliderhover {
  display: block;
}
.work__slider__item--active {
  border: 2px solid $orange;
}

.work__slider-sliderhover {
  position: absolute;
  display: none;
  width: 100%;
  height: 100%;
  background-color: $orange;
  opacity: 0.5;
}
.work__slider-pic {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.work__slider-description {
  width: 35%;

  @include tablets {
    width: 100%;
  }

  @include phones {
    width: 85%;
    margin: 0 auto;
  }
}

.work__slider-skills {
  margin-bottom: 50px;
  display: flex;
  flex-wrap: wrap;

  @include tablets {
    justify-content: center;
  }
}
.work__slider-skills-item {
  display: inline-block;
  min-width: 65px;
  min-height: 45px;
  background-color: #f1f5f9;
  text-align: center;
  line-height: 45px;
  padding: 0 20px;
  border-radius: 30px;
  margin-right: 15px;
  margin-bottom: 10px;
  color: $work-gray;
  opacity: 0.7;
  font-weight: 600;
}

.work__slider-title {
  font-size: 30px;
  line-height: 48px;
  font-weight: bold;
  margin-bottom: 45px;
  color: $title-gray;

  @include tablets {
    text-align: center;
  }

  @include phones {
    text-align: left;
    margin-bottom: 25px;
  }
}

.work__slider-text {
  font-weight: 600;
  margin-bottom: 45px;
  color: $work-text-gray;
  opacity: 0.7;

  @include tablets {
    display: block;
    width: 75%;
    text-align: center;
    margin: 0 auto;
    margin-bottom: 30px;
  }

  @include phones {
    width: 90%;
    text-align: left;
    margin: 0;
    margin-bottom: 30px;
  }
}

.work__slider-link {
  display: block;
  width: 200px;
  margin-bottom: 110px;
  color: #4b6fd7;
  font-weight: bold;
  text-decoration: none;
  padding-left: 40px;
  position: relative;
  z-index: 5;
  &::before {
    position: absolute;
    left: 0;
    content: svg-load("link.svg", fill= "#4b6fd7", width=20px, height=20px);
  }
  &:hover {
    text-decoration: underline;
  }

  @include tablets {
    margin: 0 auto;
    margin-bottom: 115px;
  }

  @include phones {
    margin-bottom: 105px;
  }
}
